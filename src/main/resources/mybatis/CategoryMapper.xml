<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lms.admin.mapper.CategoryMapper">
	
	<select id="select" resultType="com.edutech.team26.dto.CategoryDTO">
  
    SELECT C.*
		, (SELECT COUNT(*) FROM lecture WHERE CATEGORY_ID = C.ID) AS course_count
	FROM categories C

	
	</select>
</mapper>